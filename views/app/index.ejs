<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/public/css/course.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
      <h2>Welcome to Our Site</h2>
      <h2>Purpose of Site</h2>
      <h2>One or two courses to showcase to all visitors</h2>
        <% if (courses.length > 0) { %>
          <div class="container">
              <% for (let course of courses) { %>
                <div class="course-container">
                    <div class="card__image">
                      <img src="<%= course.image %>" alt="<%= course.title %>">
                    </div>
                    <div class="card__content">
                        <h3 class="course__description"><%= course.description %></h3>
                        <p class="course__title"><%= course.title %></p>
                    </div>
                </div>
              <% } %>
          </div>
      <% } else { %>
          <h2>No courses found!</h1>
      <% } %>
  </main>

<%- include('../includes/end.ejs') %>